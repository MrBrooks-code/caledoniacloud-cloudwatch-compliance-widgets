# Example terraform.tfvars file for AWS Config Custom Widgets
# Copy this file to terraform.tfvars and modify as needed

# Basic Configuration
project_name = "aws-config-custom-widgets"
environment  = "prod"

# Lambda Configuration
lambda_runtime     = "nodejs18.x"
lambda_timeout     = 30
lambda_memory_size = 256

# Logging Configuration
log_retention_days = 14

# Dashboard Configuration
create_dashboard = true
dashboard_name   = "AWS-Config-Compliance-Dashboard"

# Advanced Configuration
enable_xray = false
lambda_reserved_concurrency = 0

# Additional Environment Variables
lambda_environment_variables = {
  LOG_LEVEL = "INFO"
  DEBUG     = "false"
}

# Tags
tags = {
  Project     = "aws-config-custom-widgets"
  Environment = "prod"
  ManagedBy   = "terraform"
  Owner       = "DevOps Team"
  CostCenter  = "Security"
} 